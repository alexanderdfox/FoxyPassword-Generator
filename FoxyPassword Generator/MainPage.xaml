<Page
    x:Class="FoxyPassword_Generator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoxyPassword_Generator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPointerOver" Value="True">
                    <Setter Property="Background" Value="{ThemeResource SystemAccentColorLight1}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{ThemeResource SystemAccentColorDark1}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAltHighBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <Style x:Key="ModernSliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="{ThemeResource SystemAccentColor}"/>
        </Style>

        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAltHighBrush}"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24" MaxWidth="900" HorizontalAlignment="Center">
                
                <!-- Header with WinUI 3 Design -->
                <StackPanel Margin="0,0,0,32" HorizontalAlignment="Center">
                    <TextBlock Text="🔐 FoxyPassword Generator" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock Text="Generate secure, random passwords with professional-grade cryptography" 
                               FontSize="16" 
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="600"/>
                    <TextBlock Text="Built with WinUI 3 for Windows 11" 
                               FontSize="12" 
                               Foreground="{ThemeResource SystemAccentColor}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Generated Password Display - WinUI 3 Card -->
                <Border Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Generated Password" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,12"/>
                        <Grid>
                            <TextBox x:Name="passwordDisplay" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     FontSize="20" 
                                     FontFamily="Consolas"
                                     IsReadOnly="True"
                                     TextAlignment="Center"
                                     Margin="0,0,8,0"
                                     PlaceholderText="Generate a password to see it here"/>
                            <Button x:Name="copyButton" 
                                    Content="Copy" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    HorizontalAlignment="Right"
                                    Width="80"
                                    Click="copyButton_Click"/>
                        </Grid>
                        
                        <!-- Password Strength Indicator - WinUI 3 Progress Bar -->
                        <StackPanel x:Name="strengthIndicator" Margin="0,16,0,0">
                            <Grid>
                                <TextBlock Text="Password Strength:" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="strengthText" 
                                           Text="Generate a password to see strength" 
                                           FontSize="14" 
                                           HorizontalAlignment="Right"
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                            </Grid>
                            <ProgressBar x:Name="strengthBar" 
                                         Height="8" 
                                         Maximum="100" 
                                         Value="0"
                                         Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                         Foreground="{ThemeResource SystemAccentColor}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Password Length - WinUI 3 Slider -->
                <Border Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="Password Length" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,12"/>
                            <TextBlock x:Name="lengthDisplay" 
                                       Text="16 characters" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Top"
                                       FontSize="14"
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </Grid>
                        <Slider x:Name="passSize" 
                                Style="{StaticResource ModernSliderStyle}"
                                Minimum="8" 
                                Maximum="128" 
                                Value="16" 
                                TickFrequency="8"
                                TickPlacement="BottomRight"
                                Margin="0,0,0,8"/>
                        <TextBlock Text="Minimum 8 characters recommended for security" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Character Options - WinUI 3 Grid Layout -->
                <Border Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Character Types" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <CheckBox x:Name="uppercaseCheck" 
                                          Content="Uppercase Letters (A-Z)" 
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="lowercaseCheck" 
                                          Content="Lowercase Letters (a-z)" 
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="numbersCheck" 
                                          Content="Numbers (0-9)" 
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          IsChecked="True"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <CheckBox x:Name="specialsCheck" 
                                          Content="Special Characters (!@#$%^&*)" 
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="similarCheck" 
                                          Content="Exclude Similar Characters (l, 1, I, 0, O)" 
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          IsChecked="False"/>
                                <CheckBox x:Name="ambiguousCheck" 
                                          Content="Exclude Ambiguous Characters ({ } [ ] ( ) / \ ' &quot; ` ~ , ; : . < >)" 
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          IsChecked="False"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Custom Characters - WinUI 3 Input -->
                <Border Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <CheckBox x:Name="customBool" 
                                  Content="Include Custom Characters" 
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  IsChecked="False"/>
                        <TextBox x:Name="customChars" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 PlaceholderText="Enter custom characters (e.g., @#$%)"
                                 Margin="0,8,0,0"
                                 IsEnabled="{Binding IsChecked, ElementName=customBool}"/>
                    </StackPanel>
                </Border>

                <!-- Generate Button - WinUI 3 Primary Button -->
                <Button x:Name="generateButton" 
                        Content="Generate Secure Password" 
                        Style="{StaticResource ModernButtonStyle}"
                        FontSize="16"
                        Padding="32,16"
                        HorizontalAlignment="Center"
                        Click="generate_Click"
                        Margin="0,16,0,24"/>

                <!-- Security Notice - WinUI 3 Info Bar -->
                <Border Background="{ThemeResource SystemAccentColorLight3}" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,16">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="🔒 Security Features" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="WinUI 3 Enhanced" 
                                       FontSize="12" 
                                       Foreground="{ThemeResource SystemAccentColor}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"/>
                        </Grid>
                        <TextBlock Text="• Uses cryptographically secure random number generation&#x0a;• Passwords are generated locally on your device&#x0a;• No data is transmitted or stored&#x0a;• Supports up to 128 character passwords&#x0a;• Enhanced security with WinUI 3 APIs" 
                                   FontSize="13" 
                                   TextWrapping="Wrap"
                                   LineHeight="20"/>
                    </StackPanel>
                </Border>

                <!-- WinUI 3 Version Info -->
                <TextBlock Text="Built with WinUI 3 for Windows 11" 
                           FontSize="11" 
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
